<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, root_url(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <li><%= link_to task.id, task %> : <%= task.status %> &gt;<%= task.content %></li>
        </div>
        <div>
          <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    </li>
    <% end %>
</ul>